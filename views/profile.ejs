<% include ./partials/header.ejs %>

<a href="/logout" class="btn btn-danger btn-lg active" role="button" aria-pressed="true">logout</a>
    <div class="containerone">

        <div id="cardone">
            <img id="avatar"
                src="https://images.unsplash.com/photo-1483909796554-bb0051ab60ad?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8Z2lybCUyMHByb2ZpbGV8ZW58MHx8MHx8fDA%3D"
                alt="avatar" />
            <div id="info">
                <p id="name">
                    <%=user.username %>
                </p>
                <p id="activity">Photographer and Web designer</p><br><br>
                <form action="/upload"method="POST" enctype="multipart/form-data">
                    <input type="text" name="filecaption" placeholder="caption dalo yrr">
                    <input type="file" name="file"><br>
                    <input type="submit">
                </form>
            </div>
        </div>
    </div>



    <div class="container">
        <div class="cards flex">
            <% user.posts.forEach(function(postData){%>
                <div class="card" style="width: 18rem;">
                    <img src="/images/uploads/<%=postData.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-text"><%=postData.postText%></p>
                    </div>
                </div>
        
           <% }) %>

        </div>

        
    </div>




    <% include ./partials/footer.ejs %>